  .search-scrollable {
    width: 100%;
    max-height: 75vh;
    border-radius: 16px;
    overflow: hidden auto;
    .local-search-result-cls {
      font-size: 1rem;
      color: #ddd;
      width: 100%;
      height: 100%;
