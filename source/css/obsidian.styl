        transition: all 400ms ease-in-out;
      }
      .search-result-title {
        font-size: 1.8rem;
        font-weight: 700;
        position: relative;
        &:after {
          content: "";
          position: absolute;
          z-index: -1;
          top: 70%;
          left: -0.1em;
          right: -0.1em;
          bottom: 0;
          transition: top 200ms cubic-bezier(0, .8, .13, 1);
          background: var(--secondary);
          opacity: .3;
        }

        &:hover {
          color: var(--secondary);

          &:after {
            top: 0;
          }
        }
      }
      .search-result {
        padding: 1rem 0 3rem 0;
        font-size: 1rem;
        .search-keyword {
          background: rgba(99, 99, 99, 0.07);
          background: #b2fefa;
          background: -webkit-linear-gradient(to right, var(--code-gradient-light), var(--code-gradient-dark));
